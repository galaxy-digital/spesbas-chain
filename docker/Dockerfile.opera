FROM golang:1.14-alpine as builder

RUN apk add --no-cache make gcc musl-dev linux-headers git

WORKDIR /go/go-galaxy
COPY . .

ARG GOPROXY=direct
RUN go mod download

RUN export GIT_COMMIT=$(git rev-list -1 HEAD) && \
    export GIT_DATE=$(git log -1 --date=short --pretty=format:%ct) && \
    export CGO_ENABLED=1 && \
    go build \
	-ldflags "-s -w -X github.com/galaxy-team/spesbas-chain/cmd/galaxy/launcher.gitCommit=$GIT_COMMIT -X github.com/galaxy-team/spesbas-chain/cmd/galaxy/launcher.gitDate=$GIT_DATE" \
	-o /tmp/galaxy \
	./cmd/galaxy



FROM alpine:latest

RUN apk add --no-cache ca-certificates

COPY --from=builder /tmp/galaxy /

EXPOSE 5050 5060 5061 18547 19090

ENTRYPOINT ["/galaxy"]
